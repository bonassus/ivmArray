package mvc.view{import com.greensock.*;import com.greensock.easing.*import mvc.model.Model;import mvc.controller.Controller;import flash.display.*;import flash.events.*;	public class DragerPos extends MovieClip{		private var _model:Model;		private var _controller:Controller;        private var m:Main;        private var _dropped:MovieClip;		public function DragerPos(main,model:Model, controller:Controller){			_model = model;			_controller = controller;            m = main;            init();		}			    private function init(e:Event = null):void {			initModelEventListeners();            addEventListener(Event.ENTER_FRAME,enterFrameHandeler);            addEventListener(Event.ENTER_FRAME,enterFrameHandeler2);            addEventListener(Event.ENTER_FRAME,enterFrameHandeler3);		}		private function initModelEventListeners():void{           _model.addEventListener(Model.ON_DRAG, onDrag);		}        function enterFrameHandeler(event:Event) {            m.artDrager.x = m.artDrags.x -80;            if(_model.theCurrentSection == "section1"){                m.artDrager.y = 61;            }  else{                m.artDrager.y = -200;            }        } 	    function enterFrameHandeler2(event:Event) {			m.locationDrager.x = m.locationDrags.x -80;             if(_model.theCurrentSection == "section2"){                 m.locationDrager.y = 56;             }  else{                 m.locationDrager.y = -200;             }		}        function enterFrameHandeler3(event:Event) {           m.artistDrager.x = m.choseArtist.x - 80;            if(_model.theCurrentSection == "section4"){                m.artistDrager.y = 61;            }  else{                m.artistDrager.y = -200;            }        }        function onDrag(e:Event){            trace(_model.dragged.name);            switch (_model.dragged.name)            {                case "artDrager":                    removeEventListener(Event.ENTER_FRAME,enterFrameHandeler);                    break;                case "locationDrager":                   removeEventListener(Event.ENTER_FRAME,enterFrameHandeler2);                    break;                case "artistDrager":                   removeEventListener(Event.ENTER_FRAME,enterFrameHandeler3);                    break;                default:                    trace ("nothingg")            }       }	}}