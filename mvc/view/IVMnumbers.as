package mvc.view{import com.greensock.*;import com.greensock.easing.*import mvc.model.Model;import mvc.controller.Controller;import flash.display.*;import flash.events.*;	public class IVMnumbers extends MovieClip{		private var _model:Model;		private var _controller:Controller;        private var vset:Boolean = false;        private var hset:Boolean  = false;        private var m:Main;		public function IVMnumbers( main:Main,model:Model, controller:Controller){            m = main;			_model = model;			_controller = controller;            init();		}			    private function init(e:Event = null):void {			initModelEventListeners();		}		private function initModelEventListeners():void{            _model.addEventListener(Model.SET_INPUT_NUMBERS, setInputHandler);		}        function setInputHandler(e:Event){            _model.addEventListener(Model.HSLIDER_CHANGE, hSliderHandler);            _model.addEventListener(Model.VSLIDER_CHANGE, vSliderHandler);            m.vthumb1.addEventListener(MouseEvent.MOUSE_UP, vthumb1Up);            m.vthumb2.addEventListener(MouseEvent.MOUSE_UP, vthumb2Up);        }        function vthumb1Up(e:MouseEvent){            if(_model.VSliderNum == 6){                vset = true;                if((_model.VSliderNum == 6)&&(hset)){                    _controller.IVMSliderSet();                }            }        }       function vthumb2Up(e:MouseEvent){           if(_model.HSliderNum == 13){               hset = true;               if((_model.HSliderNum == 13)&&vset){                   _controller.IVMSliderSet();               }           }       }       function hSliderHandler(e:Event){           m.hNumberInput1.text = String(_model.HSliderNum2);           m.hNumberInput2.text = String(_model.HSliderNum);                  //trace(_model.HSliderNum);          // m.hNumberInput2.x = (_model.HSliderNum*5) +240 ;         //  m.hNumberBox2.x = (_model.HSliderNum*5) +240 ;         //  m.hNumberInput1.x = (_model.HSliderNum*5) +180 ;         //  m.hNumberBox1.x = (_model.HSliderNum*5) +180 ;       }       function vSliderHandler(e:Event){           m.vNumberInput1.text = String(_model.VSliderNum2);           m.vNumberInput2.text = String(_model.VSliderNum);        }	}}