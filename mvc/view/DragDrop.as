package mvc.view{import com.greensock.*;import com.greensock.easing.*import mvc.model.Model;import mvc.controller.Controller;import flash.display.*;import flash.events.*;	public class DragDrop extends MovieClip{		private var _model:Model;		private var _controller:Controller;		private var m:Main;        private var _drager:MovieClip;        private var _tar:MovieClip		public function DragDrop(main,model:Model, controller:Controller,drager:MovieClip,tar:MovieClip){			_model = model;			_controller = controller;			m = main;            _drager = drager;            _tar = tar;            init();		}	    private function init(e:Event = null):void {            _drager.buttonMode = true;			initListeners();		}		private function initListeners():void{			_drager.addEventListener(MouseEvent.MOUSE_DOWN, drag);			_drager.addEventListener(MouseEvent.MOUSE_UP, drop);		}		function drop(event:MouseEvent):void {			_drager.stopDrag();			TweenMax.to( _drager, 1, {				x:_tar.x,				y:_tar.y ,				width:90, 				height:48,				onComplete:onDrop,				ease:_model.theEase			});		}        function onDrop(){            _controller.onDrop(_drager);                   trace(_drager + "onDrop")        }        function drag(event:MouseEvent):void {            trace("drag" + _drager);           _drager.parent.addChild(_drager);            _drager.alpha = 1;            _drager.visible = true;            _drager.startDrag();            _controller.onDrag(_drager);        }	}}